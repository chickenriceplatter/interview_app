<h1>Employers List</h1>

<table id="employers_list">
  <th>Name</th>
  <th>Industry</th>
  <th>Location</th>
  <th>Year Established</th>
  <% @employers.sort.each do |e| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        
        <td>
        <%= link_to e.name, employer_path(e.id) %> <br>
        </td>
        <td><%= e.industry %>
        </td>
        <td><%= e.location %>
        </td>
        <td><%= e.est_year %>
        </td>
      </tr>
  <% end%>
  
</table>

<br />

<%= link_to 'New employer', new_employer_path %>