<h1>Employers List</h1>
<button type="button" class="btn btn-primary"> 
  <%= link_to 'Add Employer', new_employer_path %>
</button>
<table id="employers_list">
  <th>Name</th>
  <th>Home Page</th>
  <th>Year Established</th>
  <th>Description</th>
  <th>Funding</th>
  <th># Employees</th>
  <% @employers.sort.each do |e| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        
        <td>
        <%= link_to e.name, employer_path(e.id) %> <br>
        </td>
        <td><%= link_to e.homepage_url, e.homepage_url %>
        </td>
        <td><%= e.est_year %>
        </td>
        <td><%= e.description %>
        </td>
        <td><%= e.funding %>
        </td>
        <td><%= e.number_of_employees %>
        </td>
      </tr>
  <% end%>
  
</table>

<br />
<button type="button" class="btn btn-primary"> 
<%= link_to 'Add Employer', new_employer_path %>
</button>