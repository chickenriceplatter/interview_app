<h1>Students List</h1>

<table id="students_list">
  <th>Name</th>
  <th>Industry</th>
  <th>Location</th>
  <% @students.sort.each do |s| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
        <%= link_to s.name, student_path(s.id) %> <br>
        </td>
        <td><%= s.preferred_industry %>
        </td>
        <td><%= s.preferred_location %>
        </td>
      </tr>
  <% end%>
  
</table>

<br />

<%= link_to 'New Student', new_student_path %>