<h1> Interview </h1>

<ul>
  <h2>Student: <%= Student.find(@interview.student_id).name %> </h3>
  <h2>Employer: <%= Employer.find(@interview.employer_id).name %> </h3>
  <%  @interview.interview_appts.each_with_index do |ia, index| %>
  <h2>Appointment: <%= index + 1 %></h2>
    <h3>Date & Time: <%= ia.date_time %> </h3>
    <h3>Purpose: <%= ia.purpose %> </h3>
    <h3>Location: <%= ia.location %> </h3>
    <h3>Interviewer: <%= ia.interviewer %> </h3>
    <h3>Comments: <%= ia.comments %> </h3>
    <h3>Follow Up: <%= ia.follow_up %> </h3>
  
  <% end %>
  <h2>Last Updated: <%= @interview.updated_at %> </h2>

</ul>


<%= link_to 'New Interview', new_interview_path %> |
<%= link_to 'Edit', edit_interview_path(@interview[:id]) %> |
<%= link_to 'Delete', @interview, method: :delete, data: { confirm: "Are you sure?" } %> |
<%= link_to 'Back', interviews_path %>